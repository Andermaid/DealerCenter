@model DealerCenter.Models.Order
@{
    ViewBag.Title = "Отмена заказ";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите отменить заказ №@Model.Id ?</dt>
    </dl>

    <div>
        <form asp-controller="Order" asp-action="Cancel" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Отмена" />
            </div>
        </form>
    </div>
</div>