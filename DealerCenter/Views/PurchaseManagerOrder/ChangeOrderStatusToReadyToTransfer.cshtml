@model DealerCenter.Models.Order
@{
    ViewBag.Title = "Изменение статуса заказа";
}

<div>
    <dl class="dl-horizontal">
        <dt>Подтвердите прибытие заказа.</dt>
    </dl>

    <div>
        <form asp-controller="PurchaseManagerOrder" asp-action="ChangeOrderStatusToReadyToTransfer" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Подтвердить" />
            </div>
        </form>
    </div>
</div>