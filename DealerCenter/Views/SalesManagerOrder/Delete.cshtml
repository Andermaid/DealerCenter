@model DealerCenter.Models.Order
@{
    ViewBag.Title = "Удаление заказ";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить заказ №@Model.Id ?</dt>
    </dl>

    <div>
        <form asp-controller="SalesManagerOrder" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>