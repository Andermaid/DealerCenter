@model DealerCenter.Models.Supplier

@{
    ViewBag.Title = "Добавить поставщика";
}

<form asp-action="Create" asp-controller="Supplier">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя поставщика</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить поставщика" class="btn btn-default" />
    </div>
</form>
