@model DealerCenter.Models.Machinery
@{
    ViewBag.Title = "Удаление модели спецтехники";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить модель "@Model.Name" из ассортимента?</dt>
    </dl>

    <div>
        <form asp-controller="Machinery" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>