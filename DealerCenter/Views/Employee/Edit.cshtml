@model DealerCenter.Models.Employee
@{
    ViewBag.Title = "Редактировать пользователя";
}

<form asp-action="edit" asp-controller="Employee" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Login" class="control-label">Логин</label>
        <input type="text" asp-for="Login" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя пользователя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Должность</label>
        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-default" />
    </div>
</form>
