@model DealerCenter.Models.Employee
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить пользователя "@Model.Name" ?</dt>
    </dl>

    <div>
        <form asp-controller="Employee" asp-action="FlagDelete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>