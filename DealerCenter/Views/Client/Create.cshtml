@model DealerCenter.Models.Client

@{
    ViewBag.Title = "Добавить клиента";
}

<form asp-action="Create" asp-controller="Client">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя клиента</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Passport" class="control-label">Паспортные данные</label>
        <input type="text" asp-for="Passport" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить клиента" class="btn btn-default" />
    </div>
</form>
