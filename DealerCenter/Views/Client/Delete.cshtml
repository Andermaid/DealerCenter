@model DealerCenter.Models.Client
@{
    ViewBag.Title = "Удаление клиента";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить клиента "@Model.Name" ?</dt>
    </dl>

    <div>
        <form asp-controller="Client" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>