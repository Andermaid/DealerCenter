@model DealerCenter.Models.Client
@{
    ViewBag.Title = "Редактировать клиента";
}

<form asp-action="edit" asp-controller="Client" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя клиента</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Passport" class="control-label">Паспортные данные</label>
        <input type="text" asp-for="Passport" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-default" />
    </div>
</form>
